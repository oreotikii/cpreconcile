# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="file:./dev.db"

# Shopify Configuration
SHOPIFY_SHOP_URL=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2025-10

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Easyecom Configuration
EASYECOM_API_URL=https://api.easyecom.io
EASYECOM_EMAIL=your_registered_email_here
EASYECOM_PASSWORD=your_easyecom_password_here
EASYECOM_LOCATION_KEY=your_location_key_here
EASYECOM_API_KEY=your_x_api_key_from_primary_account

# Reconciliation Settings
RECONCILIATION_CRON_SCHEDULE=0 */6 * * *
RECONCILIATION_LOOKBACK_DAYS=7
RECONCILIATION_BATCH_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
